{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "plugins": ["typescript", "import"],
  "env": {
    "browser": true,
    "es2022": true,
    "node": true
  },
  "categories": {
    "correctness": "error"
  },
  "rules": {},
  "overrides": [
    {
      "files": ["**/*.astro"],
      "rules": {
        "no-unused-vars": "off",
        "import/no-unused-modules": "off"
      }
    },
    {
      "files": ["**/*.{test,spec}.{ts,tsx,js,jsx}", "**/__tests__/**/*"],
      "rules": {
        "no-console": "off"
      }
    },
    {
      "files": ["**/scripts/**/*", "**/bin/**/*"],
      "rules": {
        "no-console": "off"
      }
    },
    {
      "files": ["*.config.{js,ts,mjs,cjs,mts,cts}", "**/*.config.*"],
      "rules": {
        "no-console": "off"
      }
    }
  ],
  "ignorePatterns": [
    "node_modules/",
    "dist/",
    "build/",
    "out/",
    ".next/",
    ".nuxt/",
    ".output/",
    ".svelte-kit/",
    ".vitepress/cache/",
    ".vitepress/dist/",
    ".turbo/",
    ".vercel/",
    ".netlify/",
    "storybook-static/",
    ".docusaurus/",
    ".cache/",
    "public/build/",
    ".parcel-cache/",
    ".vite/",
    ".astro/",
    "_astro/",
    "coverage/",
    ".nyc_output/",
    "_generated/",
    "**/*.gen.*",
    "**/*.generated.*",
    "**/*.auto.*",
    "generated/",
    "auto-generated/",
    "codegen/",
    "__generated__/",
    "**/*.min.js",
    "**/*.min.css"
  ]
}
