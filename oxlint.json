{
  "$schema": "https://raw.githubusercontent.com/oxc-project/oxc/main/npm/oxlint/configuration_schema.json",
  "rules": {
    "typescript": "warn",
    "correctness": "warn",
    "suspicious": "warn",
    "perf": "warn",
    "style": "off",
    "pedantic": "off",
    "nursery": "off",
    "restriction": "off"
  },
  "allow": [
    "typescript/no-explicit-any",
    "typescript/no-unused-vars"
  ],
  "deny": [
    "correctness/no-unused-vars",
    "correctness/no-undef"
  ],
  "plugins": [],
  "env": {
    "browser": true,
    "node": true,
    "es2022": true
  },
  "globals": {
    "astro": "readonly",
    "HTMLElement": "readonly"
  },
  "ignore_patterns": [
    "**/node_modules/**",
    "**/dist/**",
    "**/.astro/**",
    "**/build/**",
    "**/*.min.js",
    "**/*.d.ts"
  ]
}
