{
  "$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
  "extends": [
    "ultracite"
  ],
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded",
      "quoteStyle": "single"
    }
  },
  "overrides": [
    {
      "includes": [
        "**/*.astro",
        "**/*.vue"
      ],
      "linter": {
        "rules": {
          "style": {
            "useConst": "off",
            "useImportType": "off",
            "useFilenamingConvention": "off"
          },
          "correctness": {
            "noUnusedVariables": "off",
            "noUnusedImports": "off"
          },
          "suspicious": {
            "noUnknownAtRules": "off"
          }
        }
      }
    },
    {
      "includes": [
        "**/*.css"
      ],
      "linter": {
        "rules": {
          "correctness": {
            "noUnknownTypeSelector": "off"
          },
          "style": {
            "noDescendingSpecificity": "off"
          },
          "suspicious": {
            "noUnknownAtRules": "off"
          }
        }
      }
    }
  ]
}
