---
import config from '@/config'
---

<footer class="text-center">
  <div class="tracking-tight flex gap-4 items-center justify-center">
    {config.footer.navLinks.map(link => (
      <a href={link.href}
         target="_blank"
         rel="noopener noreferrer"
         class="text-gray-500 dark:text-zinc-500 hover:text-blue-500 dark:hover:text-blue-400 hover:underline">
        {link.text}
      </a>
    ))}
  </div>
</footer>
