---
import config from '@/config'
---

<footer class="mt-8 text-center">
  <div class="flex justify-center items-center gap-4 tracking-tight">
    {config.footer.navLinks.map((link) => (
      <a
        href={link.href}
        target="_blank"
        rel="noopener noreferrer"
        class="text-gray-500 hover:text-blue-500 hover:underline"
      >
        {link.text}
      </a>
    ))}
  </div>
</footer>
