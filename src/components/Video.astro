---
type Props = {
  src: string
  extended?: boolean
  videoClass?: string
}

const { src, extended = false, videoClass } = Astro.props

const getContainerClass = () =>
  `flex flex-col items-center justify-center${extended ? ' extended-py' : ''}`

const getWrapperClass = () =>
  `flex justify-center ${extended ? ' extended-wrapper' : ''}`
---

<figure class={getContainerClass()}>
  <div class={getWrapperClass()}>
    <video src={src}
           class={videoClass}
           autoplay 
           loop 
           muted 
           playsinline />
  </div>
</figure>